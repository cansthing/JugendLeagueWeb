@page "/tournaments"
@inject NavigationManager Navigation
@inject TournamentService TournamentService
@using JugendLeagueWeb.Data
@using System.Collections.ObjectModel

<a href="tournaments/new">+ Hinzufügen</a>
<h6>Hier sollten die Turniere gelistet sein</h6>

@code {
    ObservableCollection<Tournament> AllTournaments { get; set; } = new();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        LoadTournaments();
    }

    private async void LoadTournaments()
    {
        AllTournaments = new ObservableCollection<Tournament>(await TournamentService.GetAllTournaments());
    }
}
